RewriteEngine On

# Redirect .html to non-.html (e.g., /meta-tag-generator.html to /meta-tag-generator)
RewriteCond %{REQUEST_URI} \.html$
RewriteRule ^(.+)\.html$ $1 [R=301,L]

# Redirect trailing slash to non-trailing slash (e.g., /meta-tag-generator/ to /meta-tag-generator)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ $1 [R=301,L]

# Serve .html file for non-.html requests (e.g., /meta-tag-generator serves meta-tag-generator.html)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]